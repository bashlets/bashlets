source bashlet datatype/sha1
BASHLETS_BASE=~/.bashlets


function __bashlets::library::local::list_packages_callback_path()
{
    local item="$1"
    local parent="$2"

    $BASHLETS_NAMESPACE sha1 validate "$item" || echo "${parent}/${item}"
}

function __bashlets::library::local::list_packages_callback_tree_norevs()
{
    local item="$1" ; shift
    local indent="$2"

    $BASHLETS_NAMESPACE sha1 validate "$item" || echo "${indent}${item}"
}

function __bashlets::library::local::list_packages_callback_tree()
{
    local item="$1" parent="${2}" indent="${3:-}"
    echo "${indent}${item}"
}

function __bashlets::library::local::list_packages()
{
    local base="$1" callback="$2" parent="$3" indent="$4"
    local item baseitem parentitem

    for item in $base/*
    do
        test -d "$item" || continue

        baseitem="$(basename "$item")"
        [[ $baseitem != "DEFAULT" ]] || continue

        $callback "$baseitem" "$parent" "$indent"

        # tail recursion
        $BASHLETS_NAMESPACE sha1 validate "$baseitem"   \
            || $FUNCNAME "$item" "$callback" "$parent/$baseitem" ". $indent"
    done
}

#@method
function bashlets::library::local::list_packages_path()
{
    local base="$1"
    local callback=__bashlets::library::local::list_packages_callback_path

    [[ -z $base ]] && base="$BASHLETS_BASE"
    __bashlets::library::local::list_packages "$base" "$callback"
}

#@method
function bashlets::library::local::list_packages_tree()
{
    local base="$1"
    local callback=__bashlets::library::local::list_packages_callback_tree

    [[ -z $base ]] && base="$BASHLETS_BASE"
    __bashlets::library::local::list_packages "$base" "$callback"
}

#@method
function bashlets::library::local::list_packages_tree_norevs()
{
    local base="$1"
    local callback=__bashlets::library::local::list_packages_callback_tree_norevs

    [[ -z $base ]] && base="$BASHLETS_BASE"
    __bashlets::library::local::list_packages "$base" "$callback"
}

# Local variables:
