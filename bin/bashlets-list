source bashlet api/github 2> /dev/null || source ../lib/api/github

#
# global variables
################################################################################

BASHLETS_BASE=~/.bashlets

unset list_all
unset show_default

# verbose output
verbose=:


#
# utilities
################################################################################

function usage()
{
    cat <<-EOF
		Usage:

		    bashlets-list [ -A | -D ]

		Options:

		   -A      list all available packages
		   -D      show the default branch for each component
		   -?      display this help and exit
		   -V      output version information and exit

	EOF
} 

function version()
{
    cat <<-EOF
		bashlets-list 0.1
	EOF
} 

function verbose()
{
    $verbose "$@"
}

function normalize_path()
{
    echo "${1//.//}"
}

function is_sha1()
{
    [[ $1 =~ [0-9a-f]{40} ]]
}


#
# core logic
################################################################################

function __list_installed()
{
    local base="$1"
    local indent="${2:-}"
    local default="$(readlink $base/DEFAULT)"
    for item in $(ls $base 2> /dev/null)
    do
        local is_default=
        test -d "$base/$item" || continue
        [[ $item != "DEFAULT" ]] || continue
        [[ -n $show_default && $item == $default ]] && is_default=" (*)"
        echo "${indent}${item}${is_default}"
        is_sha1 "$item" || __list_installed "$base/$item" ". $indent"
    done
}


function list_installed()
{
    __list_installed "$BASHLETS_BASE/$(normalize_path $1)"
}


function list_all()
{
    bashlets_api_github_list_repos_by_user   \
        | grep 'bashlets\.'                  \
        | grep -v bashlets.github.io         \
        | sort
}

#
# parse command line options
################################################################################

while getopts "AD?V" OPTION
do
    case $OPTION in
		A)
			list_all=1
			;;
		D)
			show_default=1
			;;
		?)
			echo ; version
			echo ; usage
			exit 0
			;;
		V)
			version
			exit 0
			;;
    esac
done

shift $((OPTIND-1))

[[ -n $list_all ]] && list_all || list_installed


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
