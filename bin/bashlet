BASHLETS_LOADER_DESTINATIONS=~/.local/bin:/usr/local/bin
BASHLET_DOWNLOAD_AGENT=curl
BASHLETS_LOCAL_POOL=~/.bashlets
BASHLETS_REMOTE_REPO=https://raw.githubusercontent.com/bashlets/bashlets/master
BASHLETS_NAMESPACE=bash$$

export BASHLETS_LOCAL_POOL
export BASHLETS_REMOTE_REPO
export BASHLETS_NAMESPACE


function bashlet_get_ostype()
{
    # cf. http://f00bar.com/blog/2011/07/09/simple-robust-os-detection-in-bash-using-ostype/

    case "$OSTYPE" in
#       solaris*)
#           echo "solaris" ;;
#       darwin*)
#           echo "osx" ;; 
        linux*)
            echo "linux" ;;
        bsd*)
            echo "bsd" ;;
        *)
            echo "unknown" ;;
    esac
}

function bashlet_to_file()
{
    local bashlet="$1"
    
    if [[ $bashlet =~ ^: ]]; then
        # plugin names are prefixed by a colon
        echo "$BASHLETS_LOCAL_POOL/plugins/${bashlet:1}"
    elif [[ $bashlet =~ @arch@ ]]; then
        echo "$BASHLETS_LOCAL_POOL/arch/$BASHLETS_OSTYPE/$(basename $bashlet)"
    else
        echo "$BASHLETS_LOCAL_POOL/lib/$bashlet"
    fi
}

function bashlet_to_url()
{
    local bashlet="$1"
    
    if [[ $bashlet =~ ^: ]]; then
        # plugin names are prefixed by a colon
        echo "$BASHLETS_REMOTE_REPO/plugins/${bashlet:1}"
    elif [[ $bashlet =~ @arch@ ]]; then
        echo "$BASHLETS_REMOTE_REPO/arch/$BASHLETS_OSTYPE/$(basename $bashlet)"
    else
        echo "$BASHLETS_REMOTE_REPO/lib/$bashlet"
    fi
}

function bashlet_download_with_curl()
{
    local url="$1"
    local file_name="$2"

    curl -f -s "$url" > "$file_name"
}

function bashlet_download_with_wget()
{
    local url="$1"
    local file_name="$2"

    wget -q -O "$file_name" "$url"
}

function bashlet_download()
{
    local url="$1"
    local file_name="$2"
    local agent="${BASHLET_DOWNLOAD_AGENT:-curl}"

    bashlet_download_with_$agent "$url" "$file_name" || {
        rm -f "$file_name"
        return 1
    }
}

function bashlet_download_loader()
{
    local url="$BASHLETS_REMOTE_REPO/bin/bashlet"
    local d

    # cycle possible destinations
    IFS=: read -r -a destinations <<< "$BASHLETS_LOADER_DESTINATIONS"
    for d in ${destinations[@]}
    do
        local file_name="$d/bashlet"
        mkdir -p "$d" 2> /dev/null  # try and create the directory
        bashlet_download "$url" "$file_name" 2> /dev/null && {
            chmod +x "$file_name"   # permit the loader to be invoked locally
            return
        }
    done

    return 1
}

function bashlet_download_bashlet()
{
    local bashlet="$1"
    local url="$(bashlet_to_url "$bashlet")"
    local file_name="$(bashlet_to_file "$bashlet")"

    mkdir -p "$(dirname "$file_name")" 2> /dev/null
    bashlet_download "$url" "$file_name"
}

function bashlet_import_lazy()
{
    local bashlet="$1"
    local file_name="$(bashlet_to_file "$1")"

    type bashlets_library_loader_import > /dev/null 2> /dev/null || {
        [[ $bashlet != "library/loader" ]] && 
            bashlet_import_lazy library/loader
    }

    [[ -f "$file_name" ]] || {
        bashlet_download_bashlet "$bashlet" || return 1
    }

    source "$file_name"
}

function bashlet_import()
{
    local bashlet="$1"

    bashlet_import_lazy $bashlet || return 1
    bashlets_library_loader_import $bashlet || return 1
}

function bashlet_trace_enable()
{
    # cf. http://www.vctlabs.com/posts/2011/Nov/26/tracing_cheatsheet/
    export BASHLETS_OLD_PS4="$PS4"
    export PS4='+(${BASH_SOURCE[0]}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
    set -x
}

function bashlet_trace_disable()
{
    # cf. http://stackoverflow.com/questions/3601515/
    set +x
    [ -z ${BASHLETS_OLD_PS4+x} ] || export PS4="$BASHLETS_OLD_PS4"
}



# detect OS type
BASHLETS_OSTYPE=$(bashlet_get_ostype)
export BASHLETS_OSTYPE

# check if the script is sourced 
[[ $0 == -bash ]] || {
    bashlet_download_loader || {
        echo "[bashlets:FATAL] Cannot download the loader!"
        exit 1
    }
    exit 0
}

# ``parse'' command line
[[ $# != 1 ]] && {
    echo "[bashlets:FATAL] Loader usage: bashlet <BASHLET>" >&2
    return 1
}

# library entry point
bashlet_import "$1" || {
    echo "[bashlets:FATAL] Generic loader error." >&2
    return 1
}


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
