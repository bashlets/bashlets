poolDir=~/.bashlets
remoteRepo=https://raw.githubusercontent.com/bashlets/bashlets-library/master/lib


function bashlet_to_file()
{
    local bashlet="$1"
    
    echo "$poolDir/$bashlet"
}

function bashlet_to_url()
{
    local bashlet="$1"
    
    echo "$remoteRepo/$bashlet"
}

function download_bashlet()
{
    local bashlet="$1"
    local file_name="$(bashlet_to_file "$1")"
    local url="$(bashlet_to_url "$1")"

    mkdir -p "$(dirname "$file_name")" 2> /dev/null
    curl -s "$url" > "$file_name"
}

function import_bashlet_lazy()
{
    local bashlet="$1"
    local file_name="$(bashlet_to_file "$1")"

    type bashlets_library_loader_import > /dev/null 2> /dev/null || {
        [[ $bashlet != "library/loader" ]] && 
            import_bashlet_lazy library/loader
    }

    [[ -f "$file_name" ]] || download_bashlet "$bashlet"

    source "$file_name"
}

function import_bashlet()
{
    local bashlet="$1"
    local bashlet_name="$(basename "$bashlet")"
    local bashlet_path="$(dirname "$bashlet")"
    local file_name="$(bashlet_to_file "$1")"
    local method_prefix="bashlets_${bashlet_path}_${bashlet_name}"
    local method_def

    import_bashlet_lazy $bashlet || return 1

    bashlets_library_loader_import $bashlet $poolDir
}


import_bashlet "$1"


# Local variables:
